@model List<FT.Web.Model.Models.OrcamentoModel>


@if (Model != null)
{ 
    <div class="orcamento-resultado-itens">
        <h3>Encontrados @Model.Count.ToString() resultados.</h3>
        <br />
        <a href="javascript:" class="resultado-active" onclick="getOrcamentoAtivo();" id="btnActive">ATIVAS</a>
        <a href="javascript:" onclick="GetOrcamentosInativos();" class="resultado-archived" id="btnArchived">ARQUIVADAS</a>
        <br />
        <br />
    </div>

    <div style="display: none;" id="divNotifyAction" class="notify-action-message">
        <span id="spnNotify"></span>
    </div>
    <div class="datagrid">
        <table>
            <thead>
                <tr>
                    <th>Nº </th>
                    <th>Título </th>
                    <th>Nome </th>
                    <th>E-mail </th>
                    <th>Data de envio</th>
                    <th>Remetente </th>
                    <th>Editar</th>
                    <th>Arquivar</th>
                </tr>
            </thead>
            @*<tfoot>
            <tr>
                <td colspan="8">
                    <div id="paging">
                        <ul>
                            <li><a href="#"><span>Previous</span></a></li>
                            <li><a href="#" class="active"><span>1</span></a></li>
                            <li><a href="#"><span>2</span></a></li>
                            <li><a href="#"><span>3</span></a></li>
                            <li><a href="#"><span>4</span></a></li>
                            <li><a href="#"><span>5</span></a></li>
                            <li><a href="#"><span>Next</span></a></li>
                        </ul>
                    </div>
            </tr>
        </tfoot>*@
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    if (i % 2 == 0)
                    {
                    <tr>
                        <td>@Model[i].CodigoOrcamento</td>
                        <td>@Model[i].Titulo</td>
                        <td>@Model[i].NomeOrcamento</td>
                        <td>@Model[i].EmailDestinatario</td>
                        <td>@Model[i].DataEnvioOrcamento</td>
                        <td>@Model[i].NomeAgente</td>
                        <td>
                            <a href="/Orcamento/EditarOrcamento?code=@Model[i].CodigoOrcamento" title="Editar" class="edit-button" ></a>
                        </td>
                        <td>
                            <a href="javascript:" class="archive-button" title="Arquivar"  onclick="arquivarOrca('@Model[i].CodigoOrcamento')" ></a>
                        </td>
                    </tr>
                    }
                    else
                    {
                    <tr class="alt">
                        <td>@Model[i].CodigoOrcamento</td>
                        <td>@Model[i].Titulo</td>
                        <td>@Model[i].NomeDestinatario</td>
                        <td>@Model[i].EmailDestinatario</td>
                        <td>@Model[i].DataEnvioOrcamento</td>
                        <td>@Model[i].NomeAgente</td>
                        <td>
                            <a href="/Orcamento/EditarOrcamento?code=@Model[i].CodigoOrcamento" title="Editar" class="edit-button" ></a>
                        </td>
                        <td>
                            <a href="javascript:" class="archive-button" title="Arquivar"  onclick="arquivarOrca('@Model[i].CodigoOrcamento')" ></a>
                        </td>
                    </tr>

                    }
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h1>Nenhum orçamento.</h1>
}