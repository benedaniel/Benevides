<script>

    var jaPesquisado = false;
    var qtdUltimaPesquisa = 0;

    function SearchHotelName()
    { 
        if(!jaPesquisado)
        {
            jaPesquisado = true;
            var num = $("#txtNome").val().length;
            if((num >= 3 && num != qtdUltimaPesquisa) || num == 0)
