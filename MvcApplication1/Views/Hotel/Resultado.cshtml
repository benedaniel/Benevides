                    async: false,
                    success: function (qtdRegistros) {

                        $(spanTotalHoteis).text(qtdRegistros);

                        $(holder).pagination('updateItems', qtdRegistros);

                        $('.loadingDefault').hide();

                        AtualizarMapaHotel();

