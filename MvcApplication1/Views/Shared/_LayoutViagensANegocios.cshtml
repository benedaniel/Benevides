<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
    @Scripts.Render("~/bundles/jquery-and-validations")
    @RenderSection("Scripts", false)
    <link href="~/Content/Master.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" type="text/css" rel="stylesheet" />
    <script>
        function abrirLogin() {
            window.open("https://v3.e-corporate.com.br/Site/Login.aspx");
        }
    </script>
</head>
<body>
    <script>
        $(document).ready(function () {
            $("#cabecalho").load("/Hotsites/ViagensANegocios/include-cabecalho-negocios.htm");
            $("#menu").load("/Hotsites/ViagensANegocios/include-menu-principal-negocios.htm");
            $("#rodape").load("/Hotsites/ViagensANegocios/include-rodape-negocios.htm");
        });
    </script>

    <div class="abas-bg">
        <div class="abas">
            @Html.RouteLink("Franchising", "Franchising", new { hotsite = String.Empty }, new { @target = "_top" })
            @Html.RouteLink("Consolidadora", "Consolidadora", new { hotsite = String.Empty }, new { @target = "_top" })
            <p class="aba-ativa">Viagens a Negócios</p>
            @Html.RouteLink("Eventos e Incentivo", "EventosEIncentivo", new { hotsite = String.Empty }, new { @target = "_top" })
            @Html.ActionLink("Viagens a Lazer", "Index", "Home")
            <div class="clear"></div>
        </div>
    </div>

    <div id="cabecalho">
    </div>

    <div id="menu">
    </div>

    @RenderBody()

    <!-- Rodapé -->
    <div id="rodape">
    </div>
</body>
</html>
